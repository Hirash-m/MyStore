@page
@model ServiceHost.Areas.Administration.Pages.Shop.Slide.IndexModel;


@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "اسلاید";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد اسلاید </a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
           
           
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست اسلاید</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th> نام اسلاید</th>
                                    <th> سر تیتر</th>
                                    <th>فعال</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.SlideViewModel)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="~/Theme/assets/img/hero-slider/@item.Picture" style="width: 95px; height: 70px" />
                                        </td>
                                        <td>@item.Heading</td>
                                        <td>@item.Title</td>
                                        <td class="text-center">
                                            @if (!item.IsDeleted)
                                            {
                                                <i class="fa fa-check fa-2x text-success "></i>
                                            }

                                            else

                                            {
                                                <i class="fa fa-check fa-2x text-success "></i>
                                            }

                                        </td>
                                       
                                        <td>
                                            <a class="btn btn-warning  waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            @if ( !item.IsDeleted)
                                            {
                                                <a class="btn btn-danger btn-custom waves-effect waves-light m-b-5" asp-page="./Index" asp-page-handler="Delete" asp-route-id="@item.Id">حذف عکس</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-success btn-custom waves-effect waves-light m-b-5" asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id">برگرداندن عکس</a>
                                            }


                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}